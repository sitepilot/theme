@tailwind base;
@tailwind components;
@tailwind utilities;

.sp-container-block {
    &.alignfull {
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
        max-width: 100vw;
        width: 100vw;
    }
}

.block-editor {
    .sp-container-block {
        &.alignfull {
            margin-left: auto;
            margin-right: auto;
            max-width: 100%;
            width: 100%;
        }
    }
}
